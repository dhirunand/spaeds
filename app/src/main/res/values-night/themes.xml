<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spaeds" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> <!--DarkActionBar -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <item name="android:windowBackground">@color/window_background_color</item>

    </style>


    <style name="Theme.Spaeds.Registration">
        <item name="android:textColorLink">@android:color/black</item>
        <item name="colorPrimary">#25000000</item>


        <item name="android:windowBackground">@color/primary</item>
    </style>
</resources>